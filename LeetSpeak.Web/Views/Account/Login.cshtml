@model LoginViewModel

<div class="row justify-content-center align-items-center vh-80">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark border-primary mb-4">
            <div class="card-header bg-dark border-primary text-center py-4">
                <div class="leet-logo mb-3">
                    <i class="fas fa-terminal me-2 text-primary"></i>
                    <span class="font-monospace">
                        <span class="font-monospace">LeetSpeak<span class="text-primary">Pro</span></span>
                    </span>
                </div>
            </div>
            <div class="card-body p-4 p-md-5">
                <form asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control bg-darker border-primary text-light"
                               placeholder="name@example.com" autocomplete="username" />
                        <label asp-for="Email" class="text-muted">
                            <i class="fas fa-envelope me-2 text-primary"></i>Email Address
                        </label>
                        <span asp-validation-for="Email" class="text-primary small d-block mt-1"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control bg-darker border-primary text-light"
                               placeholder="Password" type="password" autocomplete="current-password" />
                        <label asp-for="Password" class="text-muted">
                            <i class="fas fa-lock me-2 text-primary"></i>Password
                        </label>
                        <span asp-validation-for="Password" class="text-leet small d-block mt-1"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input bg-darker border-primary" />
                            <label asp-for="RememberMe" class="form-check-label text-muted">
                                Remember Session
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-leet w-100 py-3 mb-3">
                        LOGIN
                    </button>

                    <div class="text-center mt-4 pt-3 border-top border-leet">
                        <p class="text-muted mb-2">Don't have an account?</p>
                        <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]"
                           class="btn btn-outline-leet">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .vh-80 {
            min-height: 80vh;
        }

        .bg-darker {
            background-color: #1a1a1a;
        }

        .btn-leet {
            background-color: rgba(var(--bs-primary-rgb), var(--bs-text-opacity)) !important;
            color: #000;
            font-weight: 600;
            letter-spacing: 1px;
            transition: all 0.3s;
        }

            .btn-leet:hover {
                background-color: #08c;
                transform: translateY(-2px);
            }

        .btn-outline-leet {
            color: #0af;
            border-color: #0af;
        }

            .btn-outline-leet:hover {
                background-color: rgba(0, 170, 255, 0.1);
            }

        .form-control:focus {
            border-color: #0af;
            box-shadow: 0 0 0 0.25rem rgba(0, 170, 255, 0.25);
            background-color: #1a1a1a;
            color: #fff;
        }

        .leet-logo {
            font-size: 1.8rem;
            letter-spacing: 2px;
        }

        .leet-text {
            color: #00aaff !important;
            font-weight: 700;
        }

        .pro-text {
            color: #ffffff !important;
        }

        .leet-icon {
            color: #00aaff !important;
        }

        .text-leet {
            color: #00aaff !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}